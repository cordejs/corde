{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "rootDir": ".",
    "experimentalDecorators": true,
    "strict": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "allowJs": true,
    "checkJs": true,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true,
    "module": "CommonJS",
    "target": "ES2020",
    "esModuleInterop": true
  },
  "include": ["src/global/*.d.ts"],
  "exclude": ["node_modules", "lib", "tests", "e2e"]
}
