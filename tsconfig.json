{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "lib",
    "rootDir": ".",
    "strict": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "allowJs": true,
    "checkJs": true,
    "pretty": true,
    "skipLibCheck": true,
    "declaration": true,
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "newLine": "LF",
    "noImplicitAny": true,
    "removeComments": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "index.ts",
    "tests/core/tsJestCompiler/utils/memoize.test.ts",
    "tests/core/tsJestCompiler/utils/backports.test.ts",
    "tests/core/tsJestCompiler/utils/__mocks__"
  ],
  "exclude": ["node_modules", "lib", "tests", "e2e"]
}
