{
  "name": "herobot",
  "version": "0.1.2",
  "description": "A discord bot to play RPG",
  "main": "./src/bot.ts",
  "dependencies": {
    "@types/node": "14.14.41",
    "discord.js": "^12.5.3",
    "dotenv": "^8.0.0",
    "event-stream": "^4.0.1",
    "nodemon": "2.0.7",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.10",
    "typeorm": "^0.2.32"
  },
  "devDependencies": {
    "cloc": "^2.4.0",
    "corde": "4.1.0-beta.3",
    "husky": "^6.0.0",
    "jasmine-core": "^3.3.0",
    "karma": "^6.3.2",
    "karma-chrome-launcher": "^3.1.0",
    "karma-jasmine": "^4.0.1",
    "markdownlint": "^0.23.1",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "request": ">=2.68.0",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.2.4",
    "typings": "^2.1.1",
    "uglify-js": "^3.5.4"
  },
  "scripts": {
    "build-watch": "tsc --watch",
    "dbup": "sh composeUp.sh",
    "build": "tsc -p .",
    "bot": "node build/src/bot.js",
    "build-docs": "typedoc --out ./doc",
    "build:prod": "node -r build/config.js",
    "count": "cloc src/",
    "install-hooks": ".scripts/symlinks.sh",
    "start": "ts-node src/index.ts",
    "ignore-reset": "bash .scripts/ignore.sh",
    "commit": ".scripts/commit.sh",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migrate": "typeorm migration:run",
    "migration-revert": "typeorm migration:revert",
    "migration-create": "typeorm migration:create -n migration",
    "prettier-watch": "onchange '**/*.js' -- prettier --write {{changed}}",
    "release": "bash .scripts/release.sh",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "pretty-quick": "pretty-quick"
  },
  "keywords": [
    "heroku"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lgmagalhaes88/HeroBot.git"
  },
  "author": "lgmagalhaes88",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lgmagalhaes88/HeroBot/issues"
  },
  "engines": {
    "node": ">12.x"
  },
  "homepage": "https://github.com/lgmagalhaes88/HeroBot#readme"
}
